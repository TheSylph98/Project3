{
  "name": "Customer",
  "base": "User",
  "idInjection": true,
  "options": {
  	"validateUpsert": true,
    "strictObjectIDCoercion": true,
    "mydb": {
      "table": "customer"
    }
  },
  "http": {
    "path": "customer"
  },
  "properties": {
    "fullName": {
      "type": "string",
      "required": false
    },
    "address": {
      "type": "object",
      "required": false
    },
    "phone": {
      "type": "string",
      "required": false     
    },
    "dateOfBirth": {
      "type": "date",
      "required": false
    },
    "gender": {
      "type": "string",
      "required": false    
    },
    "receiveDistrict": {
      "type": ["string"]
    },
    "createdAt": {
      "type": "date",
      "required": false     
    },
    "enable": {
      "type": "boolean",
      "default": true
    }
  },
  "protected": ["dateOfBirth", "gender", "createdAt",  "enable"],
  "relations": {
    "hasOneCart": {
      "type": "hasOne",
      "model": "Cart",
      "foreignKey": "userId"
    },
     "hasManyOrder": {
      "type": "hasMany",
      "model": "ExportOrder",
      "foreignKey": "userId"
    },
    "hasManyComment": {
      "type": "hasMany",
      "model": "Comment",
      "foreignKey": "userId"
    }
  },
  "restrictResetPasswordTokenScope": true,
  "acls": [],
  "methods": {}
}