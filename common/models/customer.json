{
  "name": "Customer",
  "base": "User",
  "idInjection": true,
  "options": {
  	"validateUpsert": true,
    "strictObjectIDCoercion": true,
    "mydb": {
      "table": "customer"
    }
  },
  "http": {
    "path": "customer"
  },
  "properties": {
    "fullName": {
      "type": "String",
      "required": false
    },
    "address": {
      "type": [ "Object" ],
      "required": false
    },
    "phone": {
      "type": "String",
      "required": false     
    },
    "dateOfBirth": {
      "type": "Date",
      "required": false
    },
    "gender": {
      "type": "String",
      "required": false    
    },
    "receiveDistrict": {
      "type": "array",
      "default": []
    },
    "createdAt": {
      "type": "Date",
      "required": false     
    },
    "enable": {
      "type": "Boolean",
      "default": 1
    }
  },
  "protected": ["dateOfBirth", "gender", "createdAt",  "enable"],
  "validations": [],
  "relations": {
    "hasOneCart": {
      "type": "hasOne",
      "model": "Cart",
      "foreignKey": "userId"
    },
     "hasManyOrder": {
      "type": "hasMany",
      "model": "ExportOrder",
      "foreignKey": "userId"
    },
    "hasManyComment": {
      "type": "hasMany",
      "model": "Comment",
      "foreignKey": "userId"
    }
  },
  "restrictResetPasswordTokenScope": true,
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "DENY",
      "property": "listCustomer"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "listCustomer"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": "createCustomer"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "updateCustomer"
    }
  ],
  "methods": {}
}