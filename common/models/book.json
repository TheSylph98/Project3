{
  "name": "Book",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "strictObjectIDCoercion": true,
    "mydb": {
      "table": "book"
    }
  },
  "properties": {
    "uid": {
      "type": "String",
      "required": true,
      "index": {
        "unique": true
      }
    },
    "name": {
      "type": "string",
      "required": true
    },
    "categoryId": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": false
    },
    "imgURL": {
      "type": "string",
      "required": false
    },
    "publisher": {
      "type": "string",
      "required": true,
      "default": "unknow"
    },
    "author": {
      "type": "string",
      "required": true,
      "default": "unknow"
    },
    "quantity": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "sellPrice": {
      "type": "number",
      "required": true
    },
    "publishedAt": {
      "type": "Date",
      "required": false
    },
    "enable": {
      "type": "Boolean",
      "default": 1
    }
  },
  "protected" : ["id", "uid", "categoryId", "quantity"],
  "relations": {
    "hasManyComment": {
      "type": "hasMany",
      "model": "Comment",
      "foreignKey": "bookId"
    },
    "belongsToCategory": {
      "type": "belongsTo",
      "model": "Category",
      "foreignKey": "categoryId"
    }, 
    "hasManyOrderDetail": {
      "type": "hasMany",
      "model": "Comment",
      "foreignKey": "bookId"
    }
  },
  "foreignKeys": {
    "categoryId": {
      "name": "book_category",
      "foreignKey": "categoryId",
      "entityKey": "id",
      "entity": "Category"
    }
  },
  "acls": [],
  "methods": {}
}
