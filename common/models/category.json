{
  "name": "Category",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "strictObjectIDCoercion": true,
    "mydb": {
      "table": "category"
    }
  },
  "properties": {
    "name": {
      "type": "String",
      "required": true,
      "index": {
        "unique": true
      }
    }
  },
  "validations": [],
  "relations": {
    "books": {
      "type": "hasMany",
      "model": "Book",
      "foreignKey": "categoryId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone,",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone, $unauthenticated",
      "permission": "ALLOW",
      "property": ["showCategory", "listCategory", "listBook"]
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": ["find", "findById"]
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": ["create", "upsert", "updateAttributes"]
    }
  ],
  "methods": {}
}
