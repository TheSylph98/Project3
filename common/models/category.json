{
  "name": "Category",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "strictObjectIDCoercion": true,
    "mydb": {
      "table": "category"
    }
  },
  "properties": {
    "name": {
      "type": "String",
      "required": true,
      "index": {
        "unique": true
      }
    }
  },
  "protected": ["id"],
  "relations": {
    "hasManyBook": {
      "type": "hasMany",
      "model": "Book",
      "foreignKey": "categoryId", 
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [],
  "methods": {}
}
