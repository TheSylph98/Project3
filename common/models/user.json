{
  "name": "User",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
  	"validateUpsert": true,
    "strictObjectIDCoercion": true,
    "mydb": {
      "table": "user"
    }
  },
  "properties": {
    "username": {
      "type": "String",
      "required": true,
      "index": { "unique": true }
    },
    "password": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": false,
      "index": { "unique": true }
    },
    "fullName": {
      "type": "Date",
      "required": false
    },
    "address": {
      "type": "string",
      "required": false
      
    },
    "phone": {
      "type": "string",
      "required": false     
    },
    "birthday": {
      "type": "Date",
      "required": false
    },
    "gender": {
      "type": "string",
      "required": false    
    },
    "createdAt": {
      "type": "Date",
      "required": true     
    },
    "role": {
      "type": "Boolean",
      "default": 1
    },
    "enable": {
      "type": "Boolean",
      "default": 1
    }
  },
  "validations": [],
  "relations": {
    "cart": {
      "type": "hasMany",
      "model": "Cart",
      "foreignKey": "userId"
    },
     "orders": {
      "type": "hasMany",
      "model": "Order",
      "foreignKey": "userId"
    },
    "comments": {
      "type": "hasMany",
      "model": "Comment",
      "foreignKey": "userId"
    }
  },
  "acls": [],
  "methods": {}
}